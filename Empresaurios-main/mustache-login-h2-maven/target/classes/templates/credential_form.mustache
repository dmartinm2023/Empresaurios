</head>
<body>
  <div class="container">
    <div class="card">
      <h1>AÃ±adir contraseÃ±a</h1>
      <form method="post" action="/credentials/save">
        <label>TÃ­tulo</label>
        <input type="text" name="title" required maxlength="50">
        <label>Usuario/Email</label>
        <input type="text" name="login" required maxlength="50">
        <label>ContraseÃ±a</label>

        <div class="pw-field">
          <input id="pwd" type="password" name="passwordEncrypted" required maxlength="50">
          <button type="button" id="pw-toggle" class="pw-eye" aria-label="Mostrar contraseÃ±a" title="Mostrar">ğŸ‘</button>
        </div>

        <div id="pw-ui" class="pw-wrap"></div>

    <div class="pw-genbar">
      <div class="pw-gen-actions">
        <button type="button" id="pw-generate" class="btn btn-primary">Generar</button>
        <button type="button" id="pw-copy" class="btn">Copiar</button>
      </div>

      <div class="pw-gen-controls">
        <label class="ctl">
          <span>Longitud</span>
          <input id="pw-len" type="number" min="8" max="64" value="16" inputmode="numeric">
        </label>

        <label class="chk"><input id="pw-upper" type="checkbox" checked> Aâ€‘Z</label>
        <label class="chk"><input id="pw-lower" type="checkbox" checked> aâ€‘z</label>
        <label class="chk"><input id="pw-digit" type="checkbox" checked> 0â€‘9</label>
        <label class="chk"><input id="pw-symbol" type="checkbox" checked> Simbolos</label>
        <label class="chk"><input id="pw-noamb" type="checkbox" checked> Sin ambiguos</label>
      </div>
    </div>

        <button class="primary" type="submit">Guardar</button>
      </form>
      <p><a href="/">Volver</a></p>
    </div>

  </div>

  <script src="/js/pw-analyzer.js" defer></script>
  <script>
    window.addEventListener('DOMContentLoaded', function () {
      const userInput = document.querySelector('input[name="login"]');
      const passInput = document.getElementById('pwd');
      if (window.PwAnalyzer && passInput) {
        window.PwAnalyzer.mount(passInput, userInput, document.getElementById('pw-ui'));
      }

      const toggle = document.getElementById('pw-toggle');
      if (passInput && toggle) {
        let visible = false;
        function setVisible(v){
          passInput.type = v ? 'text' : 'password';
          toggle.textContent = v ? 'ğŸ™ˆ' : 'ğŸ‘';
          toggle.title = v ? 'Ocultar' : 'Mostrar';
          toggle.setAttribute('aria-label', toggle.title);
        }
        toggle.addEventListener('click', () => {
          visible = !visible;
          setVisible(visible);
          passInput.dispatchEvent(new Event('input', { bubbles: true }));
        });
        setVisible(false);
      }
    });
  </script>
</body>
</html>
